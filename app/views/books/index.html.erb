<h1>投稿一覧</h1>

<%= @books.each do |book| %>

  <p>タイトル</p>
  <span><%= book.title %></span>

  <p>本文</p>
  <span><%= book.body %></span>
  
<% end %>

<h1>New Book</h1>
<!-- form_with部分 -->
<%= form_with model: Book.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Body</h4>
  <%= f.text_area :body %>
	
  <%= f.submit 'Create Book' %>
<% end %>
