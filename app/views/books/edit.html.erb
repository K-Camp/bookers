<h1>Editing Book</h1>

<% if flash[:notice] %>
  <p id="notice"><%= flash[:notice] %></p>
<% end %>

<%= form_with model: @book do |f| %>

  <%# エラーがあるかどうか？ %>
  <% if @book.errors.any? %>
    <%# 属性の付与 %>
    <div id="error_explanation">    
      <h2>
        <%= pluralize(@book.errors.count, "error") %> 
        prohibited this book from being saved:
      </h2>
      <ul>
        <% @book.errors.full_messages.each do |msg| %>
          <%# エラーメッセージの表示 %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <label class="<%= 'field_with_errors' if @book.errors[:title].present? %>">
      Title
    </label>
    <%= f.text_field :title %>
  </div>
  
  <div class="field">
    <label class="<%= 'field_with_errors' if @book.errors[:title].present? %>">
      Body
    </label>
    <%= f.text_area :body %>
  </div>
  
  <div class="actions">
    <%= f.submit 'Update Book' %>
  </div>

  <%= link_to 'Show', book_path(@book.id) %> |
  <%= link_to 'Back', books_path %>
  
<% end %>

